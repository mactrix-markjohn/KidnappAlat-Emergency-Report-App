<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactname"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/ralewayregular"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactphone"
        android:layout_below="@+id/contactname"
        android:textColor="@color/blurtrans"
        android:textSize="13sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/humn"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:id="@+id/contactmenu"
        android:layout_alignParentRight="true"
        android:background="@drawable/leftcorner"
        android:backgroundTint="@color/blurtrans"
        android:drawableRight="@drawable/ic_more_vert_black_24dp"/>


</RelativeLayout>